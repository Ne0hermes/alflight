{
  "permissions": {
    "allow": [
      "Bash(rm:*)",
      "Bash(curl:*)",
      "Bash(mkdir:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run test:*)",
      "Bash(cat:*)",
      "Bash(npm run build:*)",
      "Bash(npx xml2js:*)",
      "Bash(taskkill:*)",
      "Bash(npm run:*)",
      "Bash(grep:*)",
      "Bash(npm install:*)",
      "Bash(node:*)",
      "Bash(npx cap init:*)",
      "Bash(npx eslint:*)",
      "Bash(npx vite:*)",
      "Bash(mv:*)",
      "Bash(del:*)",
      "Bash(cp:*)",
      "Bash(python:*)",
      "Bash(powershell:*)",
      "Bash(sed:*)",
      "Bash(awk:*)"
    ],
    "deny": []
  },
  "hooks": {
    "onFileEdit": "powershell.exe -ExecutionPolicy Bypass -File .claude/hooks/on-file-edit.ps1 -FilePath \"{{file_path}}\"",
    "onFileWrite": "powershell.exe -ExecutionPolicy Bypass -File .claude/hooks/on-file-write.ps1 -FilePath \"{{file_path}}\"",
    "onFileDelete": "powershell.exe -ExecutionPolicy Bypass -File .claude/hooks/on-file-delete.ps1 -FilePath \"{{file_path}}\""
  }
}